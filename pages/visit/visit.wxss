.report {
  width: 100%;
  height: auto;
  background: #fff;
}

.report-top{
  display: block;
  display: flex;
  font-size: 24rpx;
  color: #333;
  padding: 30rpx 0;
  font-weight:bold;
  border-bottom: 1px solid #e5e5e5;
  /*background: rgb(206, 204, 204);*/
}

.report-list {
  padding-bottom: 20rpx;
}

.name, .phone, .village, .message {
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e5e5e5;
}

.name text, .phone text, .village text, .message text {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.name input, .phone input, .village input, .message input {
  font-size: 24rpx;
  color: #333;
  flex: 1;
  height: 92rpx;
  line-height: 92rpx;
}

.default {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  font-size: 24rpx;
  padding: 30rpx 0 10rpx 0;
}

.default-wei {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1px solid #c9c9c9;
}

