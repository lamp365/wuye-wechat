/* pages/repList/repList.wxss */
.repList{
	width: 100%;
	height: auto;
	margin-bottom: 20rpx;
}
.list-xiu{
	width: 100%;
	height: auto;
}
.xiu {
  width: 702rpx;
  height: auto;
  margin: 20rpx 24rpx 0 24rpx;
  border-radius: 10rpx;
  background: #fff;
  padding-bottom: 20rpx;
}

.xiu-top {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px dashed #ccc;
}

.xiu-top>view:first-child {
  font-size: 28rpx;
  color: #333;
  border-left: 5rpx solid #fe6306;
  padding-left: 15rpx;
}

.xiu-top>view:last-child {
  display: flex;
  padding-right: 20rpx;
  font-size: 24rpx;
  color: #df273f;
}

.xiu-top>view:last-child>text {
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #fe6306;
  margin: 10rpx;
}

.xiu-bottom {
  width: 662rpx;
  height: auto;
  margin: 30rpx 20rpx 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.xiu-b-left {
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
  position: relative;
}

.xiu-b-left>image {
  width: 100%;
  height: 100%;
  box-shadow: 0 0 5rpx #f0f0f0;
}

.xiu-b-left>view {
  width: 120rpx;
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 15rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  background:  #ff9a44;
  font-size: 24rpx;
  color: #fff;
  border-bottom-right-radius: 30rpx;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.xiu-right {
  flex: 1;
}

.xiu-right>view:first-child {
  width: 100%;
  height: 68rpx;
  line-height: 34rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.xiu-right>view:nth-child(2) {
  margin-top: 40rpx;
}

.xiu-right>view {
  font-size: 24rpx;
  color: #666;
  line-height: 38rpx;
}
.list-wan{
	width: 100%;
	height: auto;
	margin-top: 10rpx;
}
/*空页面*/
.cart-kong{
  width: 100%;
  height: 100vh;
}
.cart-kong>image{
  width: 300rpx;
  height: 300rpx;
  margin: 300rpx 225rpx 30rpx 225rpx;
}
.cart-kong>view:nth-child(2){
  font-size: 32rpx;
  color: #333;
  text-align: center;
}
.cart-kong>view:last-child{
  font-size: 26rpx;
  color: #666;
  margin-top: 15rpx;
  text-align: center;
}
.replist-button{
  width: 96%;
  margin: 15rpx auto 0 auto;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #F34A51;
  background: #fff;
  border:1px solid #F34A51;
  text-align: center;
  border-radius: 10rpx;
}