<!--pages/newShop/newShop.wxml-->
<!-- 内容 -->
<loading wx:if="{{showLoading}}">加载中</loading>
<view class="xin-nei">
  <!-- 第一件商品 -->
  <view class="xin-n-one" wx:for="{{allSubject}}" wx:key="index" bindtap="bindtapSubjectInfo" data-subjectid="{{item.id}}">
    <image src="{{baseUrl}}{{item.thumb}}"></image>
    <view>{{item.title}}</view>
    <view>参赛人数：{{item.players}} 名</view>
    <view>
      <view>累积投票：</view>
      <view>{{item.votes}} 票</view>
    </view>
  </view>
</view>
<!-- 已加载全部 -->
<view class="index-qb" wx:if="{{currPage == totalPage && newShop.length != 0}}"> —— 别扯了，到底了 ——</view>
<!-- 空页面-->
<view class="cart-kong" wx:if="{{!allSubject || allSubject.length == 0}}">
  <image src="../../images/adingdan.png"></image>
  <view>暂无商品</view>
  <view>~ 该列表为空! ~</view>
</view>